import os
import cv2
import gradio as gr
from ultralytics import YOLO
import numpy as np

# ==================== æ¨¡å‹åŠ è½½ä¸æ¨ç†å‡½æ•° ====================
class YOLODetector:
    def __init__(self, model_path):
        """åˆå§‹åŒ–æ¨¡å‹ï¼ŒåŠ è½½è®­ç»ƒå¥½çš„YOLOæƒé‡"""
        self.model = YOLO(model_path)
        # ç±»åˆ«åç§°ï¼ˆéœ€ä¸è®­ç»ƒæ—¶çš„class_mappingå¯¹åº”ï¼‰
        self.class_names = ['èšé…¯ç”µå®¹', 'çƒ­æ•ç”µé˜»', 'ä¸‰ç«¯ç¨³å‹ç®¡']
        
        print(f"æ¨¡å‹åŠ è½½æˆåŠŸï¼š{model_path}")

    def detect(self, image, conf_threshold=0.5):
        """
        æ‰§è¡Œç›®æ ‡æ£€æµ‹
        å‚æ•°ï¼š
            image: è¾“å…¥å›¾ç‰‡ï¼ˆGradioä¼šè‡ªåŠ¨è½¬æ¢ä¸ºnumpyæ•°ç»„ï¼‰
            conf_threshold: ç½®ä¿¡åº¦é˜ˆå€¼
        è¿”å›ï¼š
            result_img: å¸¦æ£€æµ‹æ¡†çš„å›¾ç‰‡
            detections: æ£€æµ‹ç»“æœæ–‡æœ¬ï¼ˆç±»åˆ«+ç½®ä¿¡åº¦ï¼‰
        """
        # è½¬æ¢å›¾ç‰‡æ ¼å¼ï¼ˆGradioé»˜è®¤RGBï¼ŒOpenCVé»˜è®¤BGRï¼Œéœ€ç»Ÿä¸€ï¼‰
        img_bgr = cv2.cvtColor(image, cv2.COLOR_RGB2BGR)
        
        # æ¨¡å‹æ¨ç†
        results = self.model(img_bgr, conf=conf_threshold)
        
        # ç»˜åˆ¶æ£€æµ‹æ¡†å¹¶æå–ç»“æœ
        result_img = img_bgr  # åˆå§‹åŒ–ä¸ºåŸå›¾
        detections = []
        
        for result in results:
            for box in result.boxes:
                # è·å–åæ ‡ï¼ˆè½¬æ¢ä¸ºæ•´æ•°ï¼‰
                x1, y1, x2, y2 = map(int, box.xyxy[0])
                # è·å–ç±»åˆ«å’Œç½®ä¿¡åº¦
                cls_id = int(box.cls[0])
                cls_name = self.class_names[cls_id]
                conf = float(box.conf[0])
                
                # ç»˜åˆ¶æ£€æµ‹æ¡†å’Œæ ‡ç­¾ï¼ˆç»¿è‰²æ¡†+ç™½è‰²æ–‡å­—ï¼‰
                cv2.rectangle(result_img, (x1, y1), (x2, y2), (0, 255, 0), 2)
